#lxc.net.0.type = veth
#lxc.net.0.link = lxcbr0
#lxc.net.0.flags = up
#lxc.net.0.hwaddr = 00:16:3e:41:xx:xx
#lxc.net.1.script.up = /var/lib/lxc/mp-right/ifup.sh
#lxc.hook.start = /var/lib/lxc/mp-right/ifup.sh
#lxc.net.1.ipv4.gateway = auto 
